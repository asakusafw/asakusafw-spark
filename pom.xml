			<id>disable-assertions</id>
			<activation>
				<property>
					<name>!debug</name>
				</property>
			</activation>
			<build>
				<pluginManagement>
					<plugins>
						<plugin>
							<groupId>net.alchim31.maven</groupId>
							<artifactId>scala-maven-plugin</artifactId>
							<configuration>
								<args>
									<arg>-Xdisable-assertions</arg>
								</args>
							</configuration>
						</plugin>
					</plugins>
				</pluginManagement>
			</build>
		</profile>
	</profiles>

</project>
